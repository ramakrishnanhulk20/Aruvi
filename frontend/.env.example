# =============================================================================
# Authentication
# Generate a random secret: openssl rand -base64 32
# =============================================================================
JWT_SECRET=your_random_jwt_secret_here_use_openssl_rand_base64_32

# =============================================================================
# Sentry (Optional - for error monitoring)
# =============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# NEXT_PUBLIC_ENABLE_DONATIONS=true
# NEXT_PUBLIC_ENABLE_MERCHANT_REGISTRATION=true

# Webhook Signing (for merchant integrations)
WEBHOOK_SIGNING_SECRET=whsec_your_webhook_secret

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=
