{
  "name": "@aruvi/sdk",
  "version": "1.0.0",
  "description": "Aruvi Payment SDK - Accept private payments on your website",
  "type": "module",
  "main": "dist/aruvi-sdk.umd.js",
  "module": "dist/aruvi-sdk.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/aruvi-sdk.esm.js",
      "require": "./dist/aruvi-sdk.umd.js",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.cjs.js",
      "types": "./dist/types/react.d.ts"
    },
    "./styles.css": "./dist/aruvi-sdk.css"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist react/dist"
  },
  "keywords": [
    "aruvi",
    "payments",
    "crypto",
    "privacy",
    "fhe",
    "ethereum",
    "usdc",
    "checkout",
    "sdk"
  ],
  "author": "Ram (ramakrishnanhulk20)",
  "license": "BSD-3-Clause",
  "homepage": "https://aruvi-documentation.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramakrishnanhulk20/Aruvi"
  },
  "bugs": {
    "url": "https://github.com/ramakrishnanhulk20/Aruvi/issues"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "postcss": "^8.4.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  }
}
